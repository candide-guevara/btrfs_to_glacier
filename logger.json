{
  "version" : 1,
  "root" : {
    "level" : "DEBUG",
    "handlers" : [ "console", "file" ]
  },
  "loggers" : {
  },
  "handlers" : {
    "console" : { 
      "class" : "logging.StreamHandler",
      "formatter" : "verbose_color",
      "filters" : [ "color" ]
    },  
    "file" : { 
      "class" : "logging.FileHandler",
      "formatter" : "verbose",
      "filename" : "application.log",
      "mode" : "w"
    }  
  },
  "filters" : {
    "color" : {
      "()" : "logger.ColorFilter.factory"
    }
  },
  "formatters" : { 
    "just_message" : {
      "format" : "%(message)s"
    },
    "short" : {
      "format" : "%(levelname)s  %(message)s"
    },
    "short_color" : {
      "format" : "%(color)s%(levelname)s%(reset)s  %(message)s"
    },
    "verbose" : {
      "format" : "%(asctime)s %(levelname) 5.5s %(module)s %(funcName)s %(lineno)d  %(message)s"
    },
    "verbose_color" : {
      "format" : "%(color)s%(asctime)s %(levelname) 5.5s %(module)s %(funcName)s %(lineno)d%(reset)s  %(message)s"
    }
  }
}

